{
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "target": "ESNext"
    }
  },
  "compilerOptions": {
    "target": "ES6",
    "outDir": "lib",
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["tests/**/*", "lib"]
}
