{
  "name": "ciphenv",
  "version": "2.1.0",
  "description": "Ciphenv (Ciphered Env) is a tool for encrypting and decrypting .env* files using prefixes to indicate values to encrypt.",
  "main": "./lib/index.js",
  "types": "./lib/*.d.ts",
  "bin": {
    "ciphenv": "./lib/cli.js"
  },
  "files": [
    "lib/*",
    "!lib/types.*"
  ],
  "scripts": {
    "start": "nodemon --config nodemon.json --exec \"npm run dev\"",
    "dev": "rimraf lib tests/.env.* && tsc && npm link && npm test",
    "test": "mocha ./tests/*.test.ts",
    "build": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dvprrsh/Ciphenv.git"
  },
  "keywords": [
    ".env",
    "cipher",
    "ciphered",
    "ciphered-env",
    "dotenv",
    "encrypted-env",
    "secure-env",
    "secure",
    "encrypted",
    "environment",
    "variables"
  ],
  "author": "dvprrsh",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dvprrsh/Ciphenv/issues"
  },
  "homepage": "https://github.com/dvprrsh/Ciphenv#readme",
  "dependencies": {
    "constant-case": "^3.0.4",
    "dotenv": "^8.2.0",
    "yargs": "^16.2.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.15",
    "@types/mocha": "^8.2.1",
    "@types/node": "^14.14.25",
    "@types/yargs": "^16.0.0",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "chai": "^4.3.3",
    "eslint": "^7.19.0",
    "eslint-plugin-mocha": "^8.1.0",
    "execa": "^5.0.0",
    "mocha": "^8.3.1",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.5"
  }
}
